<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="@drawable/subcat_lay"
    android:id="@+id/subCategoryLayout">
    <ImageView
        android:id="@+id/subcat_img"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/s2"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <FrameLayout
        android:id="@+id/frameRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subcat_img"
        android:padding="5dp"
        >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:src="@drawable/star" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="4.6"
            android:textColor="@color/black"
            android:layout_marginStart="30sp"
            android:textSize="18sp"
            android:id="@+id/subcat_rating"
            />
    </FrameLayout>
    <TextView
        android:id="@+id/subcat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olay super serum"
        app:layout_constraintTop_toBottomOf="@id/frameRating"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/subcat_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        app:layout_constraintTop_toBottomOf="@id/subcat_name"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/subcat_oldprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="150"
        app:layout_constraintTop_toBottomOf="@id/subcat_price"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/subcat_offer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="15% off"
        android:textColor="@color/green"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/subcat_oldprice"
        app:layout_constraintBottom_toBottomOf="parent"
         />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/image_bg"
        android:padding="8dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/baseline_shopping_cart_24"
        app:tint="@color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>